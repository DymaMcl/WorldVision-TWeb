        border: none;
        padding: 0.875rem 1.75rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-right: 1rem;
    }

        .btn-cancel-modern:hover {
            background: #4b5563;
            transform: translateY(-1px);
        }

    .btn-submit-modern {
        background: linear-gradient(135deg, #059669, #047857);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(5, 150, 105, 0.25);
        position: relative;
        overflow: hidden;
    }

        .btn-submit-modern:hover {
            background: linear-gradient(135deg, #047857, #065f46);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(5, 150, 105, 0.3);
        }

        .btn-submit-modern i {
            margin-right: 0.5rem;
        }

    /* Responsive Design */
    (max-width: 768px) {
        .news-header h2

    {
        font-size: 2.2rem;
    }

    .header-subtitle {
        font-size: 1rem;
    }

    .form-section {
        padding: 1.5rem;
    }

    .form-header {
        padding: 1.5rem;
    }

    .form-actions {
        padding: 1.5rem;
    }

        .form-actions .row {
            flex-direction: column;
            gap: 1rem;
        }

    .btn-cancel-modern {
        margin-right: 0;
        width: 100%;
    }

    .btn-submit-modern {
        width: 100%;
    }

    }

    (max-width: 576px) {
        .container-fluid

