    }

    .form-container {
        border-radius: 15px;
    }

    }

    /* Animations */
    slideInUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Focus animations */
    .form-control-modern:focus + .form-hint {
        color: #6366f1;
    }

    .file-label-modern:focus-within {
        border-color: #6366f1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    }
