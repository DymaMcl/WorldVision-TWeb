@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="add-news-wrapper">
    <div class="container-fluid">
        <div class="news-header">
            <h2><i class="fa fa-newspaper"></i> Add News Article</h2>
            <p class="header-subtitle">Create and publish a new news story</p>
        </div>

        @using (Html.BeginForm("AddNews", "ViewRole", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-container">
                <div class="form-header">
                    <h3><i class="fa fa-edit"></i> News Details</h3>
                    <div class="form-divider"></div>
                </div>

                <!-- Title and Image Section -->
                <div class="form-section">
                    <div class="row gx-4 gy-3">
                        <div class="col-lg-7 col-md-6">
                            <div class="input-group-modern">
                                <label class="form-label-modern" for="Title">
                                    <i class="fa fa-heading"></i> Article Title
                                </label>
                                <input type="text"
                                       placeholder="Enter the news article title..."
                                       name="Title"
                                       id="Title"
                                       class="form-control-modern"
                                       required
                                       maxlength="150" />
                                <div class="form-hint">
                                    <i class="fa fa-info-circle"></i>
                                    Make it descriptive and engaging (max 150 characters)
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-5 col-md-6">
                            <div class="input-group-modern">
                                <label class="form-label-modern">
                                    <i class="fa fa-image"></i> Featured Image
                                </label>
                                <div class="file-upload-modern">
                                    <label for="imageFile" class="file-label-modern">
                                        <div class="upload-content">
                                            <i class="fa fa-cloud-upload upload-icon"></i>
                                            <span class="upload-text">Choose Image</span>
                                            <small class="upload-hint">JPG, PNG, GIF (Max 5MB)</small>
                                        </div>
                                    </label>
                                    <input type="file"
                                           name="ImageFile"
                                           id="imageFile"
                                           class="file-input-modern"
                                           accept="image/*"
                                           required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="form-section">
                    <div class="input-group-modern">
                        <label class="form-label-modern" for="Description">
                            <i class="fa fa-align-left"></i> Article Content
                        </label>
                        <textarea name="Description"
                                  id="Description"
                                  rows="8"
                                  class="form-control-modern textarea-modern"
                                  placeholder="Write your news article content here. Be detailed and informative..."
                                  required></textarea>
                        <div class="form-hint">
                            <i class="fa fa-lightbulb"></i>
                            Include key details: who, what, when, where, and why
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <button type="button" class="btn-cancel-modern" onclick="history.back()">
                                <i class="fa fa-times"></i>
                                Cancel
                            </button>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn-submit-modern">
                                <i class="fa fa-paper-plane"></i>
                                <span class="btn-text">Publish Article</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .add-news-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

