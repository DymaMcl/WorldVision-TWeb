@{
    ViewBag.Title = "Add Category News";
}

<div class="add-category-wrapper">
    <div class="category-header text-center mb-4">
        <h2><i class="fa fa-folder-plus"></i> Add New Category</h2>
    </div>

    <form enctype="multipart/form-data" method="post" action="/Admin/AddCategory">
        <div class="form-container">
            <div class="row justify-content-center mb-4">
                <div class="col-md-5">
                    <label for="CategoryName" class="form-label-modern">Category Name</label>
                    <input type="text" class="form-control-modern" id="CategoryName" name="CategoryName" placeholder="Technology, Social, Culture..." required />
                </div>
                <div class="col-md-5">
                    <label class="form-label-modern">Representative Image</label>
                    <div class="file-upload-modern">
                        <label for="CategoryImage" class="file-label-modern">
                            <i class="fa fa-image"></i> Choose Image
                        </label>
                        <input type="file" name="CategoryImage" id="CategoryImage" class="file-input-modern" required />
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn-submit-modern">
                    <i class="fa fa-check-circle me-1"></i> Publish Category
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    .add-category-wrapper {
        background: linear-gradient(135deg, #11998e, #38ef7d);
        min-height: 100vh;
        padding: 3rem 0;
        color: #fff;
    }

    .category-header h2 {
        font-size: 2.2rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .form-container {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        max-width: 950px;
        margin: 0 auto;
        padding: 2.5rem 2rem;
        color: #1f2937;
    }

    .form-label-modern {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control-modern {
        width: 100%;
        padding: 0.9rem;
        border: 2px solid #d1d5db;
        border-radius: 10px;
        background-color: #f9fafb;
        transition: 0.3s ease;
    }

        .form-control-modern:focus {
            border-color: #10b981;
            outline: none;
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.2);
        }

    .file-upload-modern {
        position: relative;
        width: 100%;
    }

    .file-label-modern {
        display: inline-block;
        background: linear-gradient(135deg, #10b981, #34d399);
        color: #fff;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        cursor: pointer;
        width: 100%;
        font-weight: 600;
        text-align: center;
        transition: 0.3s ease;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.3);
    }

        .file-label-modern:hover {
            background: linear-gradient(135deg, #059669, #10b981);
            transform: translateY(-2px);
        }

    .file-input-modern {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
        top: 0;
        left: 0;
    }

    .btn-submit-modern {
        background: linear-gradient(135deg, #16a34a, #22c55e);
        color: white;
        padding: 1rem 2.5rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: 0.3s ease;
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
    }

        .btn-submit-modern:hover {
            background: linear-gradient(135deg, #15803d, #16a34a);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(34, 197, 94, 0.4);
        }
</style>
